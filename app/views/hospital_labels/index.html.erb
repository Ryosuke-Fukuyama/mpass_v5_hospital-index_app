<h3><%= t('view.hospital_label') + t('view.index') %></h3>

<div class="search_area">
  <%= search_form_for @q, url: hospital_labels_path do |f| %>
    <%= f.label :name_cont, t('view.hospital_label') + t('view.name_of') + ":" %>
    <%= f.search_field :name_cont, placeholder: t('view.placeholder.part') %>

    <%= f.submit %>
  <% end %>
</div>

<div class="slender_table">
  <table>
    <thead>
      <tr>
        <th><%= t('view.hospital_label') + t('view.name_of') %><th>
      </tr>
    </thead>
    <tbody>
      <% @hospital_labels.each.with_index do |label, i| %>
        <tr>
          <td align="center"><%= label.name %></td>
        </tr>
        <% if i+1 % 5 == 0 %>
          <br>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<div align="center", class="paginate">
  <%= paginate @hospital_labels %>
</div>

